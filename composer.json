{
    "require": {
      "php": "^8.1.12"
    },
    "scripts": {
      "post-install-cmd": [
        "chmod -R 775 bootstrap/cache",
        "chmod -R 775 storage/",
        "php artisan clear-compiled",
        "php artisan optimize"
      ],
      "post-update-cmd": [
        "chmod -R 775 bootstrap/cache",
        "chmod -R 775 storage/",
        "php artisan clear-compiled",
        "php artisan optimize"
      ]
    

    },
    "config": {
      "preferred-install": "dist"
    },
    "require-dev": {
      "heroku/heroku-buildpack-php": "*"
    }
    
  }
  